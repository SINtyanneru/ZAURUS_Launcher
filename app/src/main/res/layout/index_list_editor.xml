<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@color/SYSTEM_UI_BACKGROUND">
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_marginStart="1dp"
		android:layout_marginEnd="1dp"
		android:layout_marginBottom="1dp"
		android:orientation="vertical">
		<!--操作-->
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="1">
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical">
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@color/TEXT_BACKGROUND_COLOR"
						android:textColor="@color/white"
						android:textSize="20dp"
						android:text="@string/INDEX_LIST_EDITOR.TITLE" />
				</LinearLayout>
				<FrameLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="right">
					<Button
						android:id="@+id/APPLAY_BUTTON"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:background="@color/APPLAY_BUTTON_COLOR"
						android:textColor="@color/black"
						android:text="@string/SETTING_APPLY" />
				</FrameLayout>
		</FrameLayout>
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="0dp"
			android:layout_weight="9">
			<ListView
				android:id="@+id/INDEX_LIST"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginStart="1dp"
				android:layout_marginTop="1dp"
				android:layout_marginEnd="1dp"
				android:layout_marginBottom="1dp"
				android:background="@color/white" />
		</FrameLayout>
	</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>